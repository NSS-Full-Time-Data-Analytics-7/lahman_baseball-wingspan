--Question 4


With pos as(SELECT *,
	          CASE WHEN pos IN ('SS','1B','2B','3B') then 'Infield'
		           WHEN pos IN ('OF') then 'Outfield'
		           WHEN pos IN('P', 'C') then 'Battery'
		           END as position_t
	        FROM fielding) 
SELECT SUM(po), position_t
FROM pos
WHERE yearid='2016'
GROUP BY position_t

--OR

Select sum(po),
		Case when pos = 'OF' then 'Outfield'
			 When pos in('SS', '1B', '2B', '3B') then 'Infield'
			 When pos in('P', 'C') then 'Battery'
			 End as new_pos
from fielding
Where yearid = '2016'
Group by new_pos;
